@model BookStore.Domain.Model.Inventory
<head>
    <style>
        dt {
            margin-right: 1vw;
        }
        .item-card {
            background-color: black;
            border-radius: 1vw;
            padding: 2vw;
            margin: 3vw;
        }
        .row {
            display: flex;
            flex-direction: column;
        }
        .display {
            display: flex;
            flex-direction: row;
        }

    </style>
</head>
<div class="item-card">
    <img src="~/Assets/Images/bookabouteverything.png" alt="Image absent" onerror="this.onerror=null;width="200" height="150" style="background:transparent"/>
    <dl class="row">
        <div class="display name">
            <dt>
                @Html.DisplayNameFor(model => model.Products.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Products.Name)
            </dd>
        </div>
        <div class="display qty">
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
        </div>
    </dl>
</div>

