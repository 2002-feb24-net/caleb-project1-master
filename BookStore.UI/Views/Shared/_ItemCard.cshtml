@model BookStore.Domain.Model.Inventory
<head>
    <style>
        dt {
            margin-right: 1vw;
        }
        .item-card {
            background-color: #F0F7EE;
            border-radius: 1vw;
            padding: 2vw;
            margin: 3vw;
        }
        .row {
            display: flex;
            flex-direction: column;
        }
        .display {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
        }

    </style>
</head>
<div class="item-card">
    <img src="~/Assets/Images/@Model.Product.ImageUrl" alt="Book image" onerror="this.onerror=null;" this.src='https://pngimage.net/wp-content/uploads/2020/02/open-book-png-transparent-.png' width="150" height="150" style="background:transparent" />
    <dl class="row">
            <dt>
                @Html.DisplayNameFor(model => model.Product.Name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Product.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Product.Price)
            </dt>
            <dd>
                $@Html.DisplayFor(model => model.Product.Price)
            </dd>
</div>

